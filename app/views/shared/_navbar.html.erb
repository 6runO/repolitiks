<div class="navbar navbar-expand-sm navbar-light navbar-lewagon px-5">

  <%= link_to root_path, class: "navbar-brand py-0" do %>
    <p class="text-logo logo-font mb-0"><span class="logo-fading logo-border-right pr-1">RE</span><span class="logo-decrescendum pl-1">PLTKS</span></p>
  <% end %>

  <%# Search field %>
  <% unless current_page?(root_path) %>
    <%= render "shared/search_field" %>
  <% end %>

  <button class="navbar-toggler py-0 my-1 px-2" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <%# Link Políticos %>
      <%= link_to "Políticos", candidatos_path, class: "nav-link mr-3" %>
      <% if user_signed_in? %>
        <%# Casinha Home %>
        <li class="nav-item">
          <%= link_to user_root_path, class:"nav-link mr-3" do %>
            <i class="fas fa-house-user nav-casinha"></i>
          <% end %>
        </li>
        <%# Avatar dropdown %>
        <li class="nav-item dropdown">
          <%= image_tag "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <p><%= current_user.email %></p>
            <%= link_to "Minha conta", edit_user_registration_path, class: "dropdown-item item-minha-conta" %>
            <hr class="m-2">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%# Link Entrar %>
          <%= link_to "Entrar", "", data: { toggle: "modal", target: "#exampleModalCenter" } , class: "nav-link nav-login rounded" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="modal fade log-modal" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <%= render "shared/login_modal" %>
</div>
