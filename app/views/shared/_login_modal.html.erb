<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalCenterTitle">Entrar</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= simple_form_for(@user_login, url: user_session_path, remote: true) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password, label: "Senha",
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, label: "Lembrar depois", as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Entrar",  class: "btn btn-primary mb-2" %>
        </div>
      <% end %>

      <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
      <hr>
      <div class="d-flex justify-content-between">
        <%= link_to "Cadastrar-se", new_registration_path(resource_name), class: "btn btn-success" %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
      </div>
    </div>
    <%# <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-primary">Save changes</button>
    </div> %>
  </div>
</div>
