<div class="modal-dialog modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header py-1 px-5 align-items-center text-center">
      <h3 class="modal-title flex-grow-1" id="exampleModalCenterTitle">
        <p class="text-logo mb-0"><span class="logo-main">RE</span><span class="logo-mirror">PLTKS</span></p>
      </h3>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body p-0">
      <%# navtab %>
      <div class="container pl-0 pr-0">
        <div class="card">
          <div class="card-header px-4">
            <ul class="nav nav-pills card-header-tabs" id="myTab" role="tablist">
              <li class="nav-item">
                <a class="nav-link dark active" id="dados-tab" data-toggle="tab" href="#dados" role="tab" aria-controls="dados" aria-selected="true">Entrar</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" id="bens-tab" data-toggle="tab" href="#bens" role="tab" aria-controls="bens" aria-selected="false">Cadastrar-se</a>
              </li>
            </ul>
          </div>

          <div class="tab-content" id="myTabContent">
            <%# <h2 class="card-title text-center mt-3">Entrar/Cadastrar</h2> %>
            <div class="tab-pane fade show active" id="dados" role="tabpanel" aria-labelledby="home-tab">
              <%# login form %>
              <div class="pt-3 pb-4 px-4">
                <%= simple_form_for(@user_login, url: user_session_path, remote: true) do |f| %>
                  <%= f.error_notification %>
                  <div class="form-inputs">
                      <%= f.input :email,
                                  required: false,
                                  autofocus: true,
                                  input_html: { autocomplete: "email" } %>
                      <%= f.input :password, label: "Senha",
                                  required: false,
                                  input_html: { autocomplete: "current-password" } %>
                      <%= f.input :remember_me, label: "Lembrar depois", as: :boolean if devise_mapping.rememberable? %>
                  </div>
                  <div class="form-actions">
                    <%= f.button :submit, "Entrar",  class: "btn btn-gradient w-100 mb-2" %>
                  </div>
                <% end %>
                <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />
              </div>
            </div>
            <div class="tab-pane fade text-center" id="bens" role="tabpanel" aria-labelledby="bens-tab">
              <%# sign up form %>


            </div>
          </div>
        </div>
        <div class="bg-light py-2">
          <%# <%= link_to "Cadastrar-se", new_registration_path(resource_name), class: "btn btn-success" %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        </div>
      </div>
    </div>
  </div>
</div>
