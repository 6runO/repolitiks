<%# <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= simple_form_for(@user_login, as: :user, url: session_path(:user), remote: true) do |f| %>

  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <hr>
    <%= f.button :submit, "Entrar",  class: "btn btn-primary" %>
  </div>
<% end %>

<br>
<%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %><br />

<div class="d-flex justify-content-between">
  <%= link_to "Cadastrar-se", new_registration_path(resource_name), class: "btn btn-success" %>
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
</div>
