<%# <div class="container bg-white rounded py-2 mt-2"> %>
  <%= form_tag candidatos_path, method: :get, class:"d-flex" do %>
    <div class="search-bar row px-2 mt-2 bg-white justify-content-center align-items-center mx-auto">
      <div class="d-flex flex-column input-pad">
        <small><%= label_tag :nome, nil, class: 'm-0 px-3' %></small>
        <%= text_field_tag :nome, params[:nome], placeholder: "Pode ser de urna...", class: 'input-border px-2' %>
      </div>
      <div class="d-flex flex-column input-pad">
        <small><%= label_tag :cargo, nil, class: 'm-0 px-3' %></small>
        <%= text_field_tag :cargo, params[:cargo], placeholder: "Senador, deputado...", class: 'input-border' %>
      </div>
      <div class="d-flex flex-column input-pad">
        <small><%= label_tag :partido, nil, class: 'm-0 px-3' %></small>
        <%= text_field_tag :partido, params[:partido], placeholder: "Partido", class: 'input-border' %>
      </div>
      <div class="d-flex flex-column input-pad">
        <small><%= label_tag :estado, nil, class: 'm-0 px-3' %></small>
        <%= select_tag :estado, options_for_select(Candidato::ESTADOS, params[:estado]), prompt: "UF", class: "select-gray input-border" %>
      </div>
      <div class="d-flex flex-column input-pad">
        <small><%= label_tag :eleito, nil, class: 'm-0 px-3' %></small>
        <%= select_tag :eleito, options_for_select(["Eleito", "Não eleito"], params[:eleito]), prompt: "Foi eleito?", class: "select-gray input-border" %>
      </div>
      <%= button_tag(type: "submit", class: "btn btn-dark") do %>
        <i class="fas fa-search"></i>
      <% end %>
    </div>
  <% end %>
<%# </div> %>
<div class="container">
  <div class="">
    <small class="text-muted"><%= pluralize(Candidato.page.total_pages, "página") %>
    - <%= Candidato.count %> candidatos</small>
  </div>
</div>

<div class="container">
  <div class="d-flex flex-wrap-reverse align-items-center text-center pt-3">
    <h2 class="flex-grow-1 my-0 order-sm-0 px-5">Candidatos</h2>
    <% if user_signed_in? %>
    <%# <div class="text-right position-absolute"> %>
      <div class="order-sm-1 py-2 mx-auto"><%= link_to "Minha página", user_root_path, class: "btn btn-dark" %></div>
    <%# </div> %>
  <% end %>
  </div>
  <div class="pt-4">
    <div class="row">
      <% @candidatos.each do |candidato| %>
        <div class="col-sm-6 col-lg-3 mb-4 d-flex align-items-stretch justify-content-center">
          <%= render "shared/card_candidato", candidato: candidato %>
        </div>
      <% end %>
    </div>
  </div>
  <%= paginate @candidatos %>
  <hr>
  <a href="#">Voltar ao topo</a>
  <br>
  <br>
</div>
